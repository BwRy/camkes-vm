import "../../interfaces/RTC.idl4";
import "../../interfaces/VirtIOPort.idl4";
import "../../interfaces/Timer.idl4";
import "../../interfaces/LevelInterrupt.idl4";
import "../../interfaces/PutChar.idl4";

component RTCEmulator {
    has mutex rtc;
    uses PutChar putchar;
    provides VirtIOPort cmosport;
    uses LevelInterrupt rtc_irq;

    uses RTC system_rtc;

    uses Timer rtc_periodic_timer;
    consumes timer_complete rtc_periodic_timer_interrupt;
    uses Timer rtc_coalesced_timer;
    consumes timer_complete rtc_coalesced_timer_interrupt;
    uses Timer rtc_second_timer;
    consumes timer_complete rtc_second_timer_interrupt;
    uses Timer rtc_second_timer2;
    consumes timer_complete rtc_second_timer2_interrupt;
}
